ns0 = dict(globals())

prologue = """
from __future__ import division
from math import *
from geotools import *
from occmodel import *
from poctools import *
import poctools as _poctools
_poctools.start()
"""

epilogue = """
_poctools.output(__output__)
"""

import os
import sys

del sys.argv[0]
filename = sys.argv[0]
ns0['__file__'] = filename
ns0['__output__'] = os.path.splitext(filename)[0] + ".stl"

exec prologue in ns0
#try:
execfile(filename, ns0)
#finally:
exec epilogue in ns0
