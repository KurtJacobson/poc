IN=25.4

dist = 12*IN
dia = .75*IN
od = dia + .25*IN
elevation = 1*IN
engagement = 1*IN

angle = atan2(elevation, dist)

with Intersection():
    with Difference():
        Cylinder((0,0,-elevation), (0,0,elevation+engagement), od/2)
        Cylinder((0,0,elevation),  (0,0,100),                  dia/2)
    Rotate(angle, (1,0,0))
    Box((-100,-100,0), (100,100,100))
Fillet(1)
